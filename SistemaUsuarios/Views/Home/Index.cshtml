@section Scripts {
    <script>
        // Carregar dados reais via AJAX
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
            
            // Atualizar a cada 30 segundos
            setInterval(loadDashboardData, 30000);
        });

        function loadDashboardData() {
            // Simular carregamento de dados (substituir por chamadas reais à API)
            document.getElementById('totalPropostas').textContent = '12';
            document.getElementById('propostasAprovadas').textContent = '8';
            document.getElementById('totalVisualizacoes').textContent = '245';
            document.getElementById('tempoMedio').textContent = '3m 24s';
            document.getElementById('taxaConversao').textContent = '67%';
            document.getElementById('tempoMedioView').textContent = '2m 15s';
            document.getElementById('totalInteracoes').textContent = '89';
        }

        function refreshData() {
            const btn = document.querySelector('.btn-refresh-exec');
            btn.style.animation = 'spin 1s linear';
            
            setTimeout(() => {
                btn.style.animation = '';
                loadDashboardData();
            }, 1000);
        }

        // CSS para animação de refresh
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes spin {
                from { transform: rotate(0deg); }
                to { transform: rotate(360deg); }
            }
        `;
        document.head.appendChild(style);
    </script>
}