@model SistemaUsuarios.Models.ViewModels.PropostaFiltroViewModel
@using SistemaUsuarios.Models
@{
    ViewData["Title"] = "Propostas de Viagem";
}

<!-- Header Principal -->
<div class="main-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="header-content">
                    <h1 class="main-title">Propostas de Viagem</h1>
                    <p class="main-subtitle">Gerencie e acompanhe todas as suas propostas</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="header-actions">
                    <a href="/Proposta/Criar" class="btn btn-primary btn-create">
                        <i class="fas fa-plus me-2"></i>Nova Proposta
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard de Estatísticas -->
<div class="dashboard-stats">
    <div class="container-fluid">
        <div class="stats-container">
            <div class="stat-item stat-total">
                <div class="stat-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.TotalPropostas</div>
                    <div class="stat-label">Total</div>
                    <div class="stat-change">
                        <i class="fas fa-arrow-up"></i>
                        <span>+12% este mês</span>
                    </div>
                </div>
            </div>

            <div class="stat-item stat-rascunhos">
                <div class="stat-icon">
                    <i class="fas fa-edit"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.TotalRascunhos</div>
                    <div class="stat-label">Rascunhos</div>
                    <div class="stat-percentage">
                        @if (Model.TotalPropostas > 0)
                        {
                            <span>@(Math.Round((double)Model.TotalRascunhos / Model.TotalPropostas * 100, 1))%</span>
                        }
                        else
                        {
                            <span>0%</span>
                        }
                    </div>
                </div>
            </div>

            <div class="stat-item stat-enviadas">
                <div class="stat-icon">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.TotalEnviadas</div>
                    <div class="stat-label">Enviadas</div>
                    <div class="stat-percentage">
                        @if (Model.TotalPropostas > 0)
                        {
                            <span>@(Math.Round((double)Model.TotalEnviadas / Model.TotalPropostas * 100, 1))%</span>
                        }
                        else
                        {
                            <span>0%</span>
                        }
                    </div>
                </div>
            </div>

            <div class="stat-item stat-aprovadas">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.TotalAprovadas</div>
                    <div class="stat-label">Aprovadas</div>
                    <div class="stat-percentage success">
                        @if (Model.TotalPropostas > 0)
                        {
                            <span>@(Math.Round((double)Model.TotalAprovadas / Model.TotalPropostas * 100, 1))%</span>
                        }
                        else
                        {
                            <span>0%</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filtros Modernos -->
<div class="filters-modern">
    <div class="container-fluid">
        <div class="filters-header">
            <h6 class="filters-title">
                <i class="fas fa-sliders-h me-2"></i>Filtros
            </h6>
            <button class="btn btn-outline-secondary btn-sm" id="toggleFilters">
                <i class="fas fa-chevron-down me-1"></i>Expandir
            </button>
        </div>

        <div class="filters-content" id="filtersContent">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-xl-4 col-lg-6">
                        <div class="filter-group">
                            <label class="filter-label">Buscar propostas</label>
                            <div class="search-wrapper">
                                <i class="fas fa-search search-icon"></i>
                                <input asp-for="TermoBusca" class="form-control search-input" 
                                       placeholder="Digite o título da proposta..." />
                                @if (!string.IsNullOrEmpty(Model.TermoBusca))
                                {
                                    <button type="button" class="clear-search" onclick="this.previousElementSibling.value=''; this.style.display='none';">
                                        <i class="fas fa-times"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-3 col-md-6">
                        <div class="filter-group">
                            <label class="filter-label">Status</label>
                            <select asp-for="FiltroStatus" class="form-select filter-select">
                                <option value="">Todos</option>
                                <option value="1">Rascunho</option>
                                <option value="2">Enviada</option>
                                <option value="3">Aprovada</option>
                                <option value="4">Rejeitada</option>
                                <option value="5">Cancelada</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-3 col-md-6">
                        <div class="filter-group">
                            <label class="filter-label">Data inicial</label>
                            <input asp-for="DataInicioFiltro" class="form-control filter-date" type="date" />
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-3 col-md-6">
                        <div class="filter-group">
                            <label class="filter-label">Data final</label>
                            <input asp-for="DataFimFiltro" class="form-control filter-date" type="date" />
                        </div>
                    </div>

                    <div class="col-xl-2 col-lg-3 col-md-6">
                        <div class="filter-group">
                            <label class="filter-label">Ações</label>
                            <div class="filter-actions">
                                <button type="submit" class="btn btn-primary filter-btn">
                                    <i class="fas fa-search me-1"></i>Filtrar
                                </button>
                                <a href="/Proposta" class="btn btn-outline-secondary filter-btn">
                                    <i class="fas fa-refresh me-1"></i>Limpar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filtros Ativos -->
                @if (!string.IsNullOrEmpty(Model.TermoBusca) || Model.FiltroStatus.HasValue || Model.DataInicioFiltro.HasValue || Model.DataFimFiltro.HasValue)
                {
                    <div class="active-filters">
                        <span class="active-filters-label">Filtros ativos:</span>
                        @if (!string.IsNullOrEmpty(Model.TermoBusca))
                        {
                            <span class="filter-tag">
                                <i class="fas fa-search me-1"></i>
                                "@Model.TermoBusca"
                                <button type="button" class="remove-filter" onclick="removeFilter('TermoBusca')">×</button>
                            </span>
                        }
                        @if (Model.FiltroStatus.HasValue)
                        {
                            <span class="filter-tag">
                                <i class="fas fa-flag me-1"></i>
                                @@(Model.FiltroStatus.Value == 1 ? "Rascunho" : 
                                  Model.FiltroStatus.Value == 2 ? "Enviada" : 
                                  Model.FiltroStatus.Value == 3 ? "Aprovada" : 
                                  Model.FiltroStatus.Value == 4 ? "Rejeitada" : "Cancelada")
                                <button type="button" class="remove-filter" onclick="removeFilter('FiltroStatus')">×</button>
                            </span>
                        }
                        <a href="/Proposta" class="clear-all-filters">
                            <i class="fas fa-times me-1"></i>Limpar todos
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<!-- Grid de Propostas -->
@if (Model.Propostas.Any())
{
    <div class="propostas-grid">
        @foreach (var proposta in Model.Propostas)
        {
            <div class="proposta-card fade-in-up">
                <div class="proposta-status status-@(proposta.StatusProposta.ToString().ToLower())">
                    @proposta.StatusProposta
                </div>
                
                @if (!string.IsNullOrEmpty(proposta.FotoCapa))
                {
                    <img src="@proposta.FotoCapa" alt="@proposta.Titulo" class="proposta-image">
                }
                else
                {
                    <div class="proposta-image d-flex align-items-center justify-content-center bg-destaque">
                        <i class="fas fa-image fa-3x text-secondary"></i>
                    </div>
                }

                <div class="proposta-content">
                    <h3 class="proposta-title">@proposta.Titulo</h3>
                    
                    <div class="proposta-meta">
                        <div class="meta-item">
                            <i class="fas fa-calendar"></i>
                            <span>
                                @if (proposta.DataInicio.HasValue && proposta.DataFim.HasValue)
                                {
                                    @proposta.DataInicio.Value.ToString("dd/MM") <text> - </text> @proposta.DataFim.Value.ToString("dd/MM")
                                }
                                else
                                {
                                    <text>A definir</text>
                                }
                            </span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-users"></i>
                            <span>@(proposta.NumeroPassageiros + proposta.NumeroCriancas) pessoa@(proposta.NumeroPassageiros + proposta.NumeroCriancas != 1 ? "s" : "")</span>
                        </div>
                        @if (proposta.DuracaoDias.HasValue)
                        {
                            <div class="meta-item">
                                <i class="fas fa-clock"></i>
                                <span>@proposta.DuracaoDias dia@(proposta.DuracaoDias != 1 ? "s" : "")</span>
                            </div>
                        }
                    </div>

                    <div class="d-flex align-items-center justify-content-between">
                        @if (proposta.LinkPublicoAtivo)
                        {
                            <span class="badge badge-link-ativo">
                                <i class="fas fa-link me-1"></i>Link Ativo
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-link-inativo">
                                <i class="fas fa-link-slash me-1"></i>Link Inativo
                            </span>
                        }
                        
                        <small class="text-secondary">
                            @if (proposta.DataModificacao.HasValue)
                            {
                                <text>Editada @proposta.DataModificacao.Value.ToString("dd/MM/yyyy")</text>
                            }
                            else
                            {
                                <text>Criada @proposta.DataCriacao.ToString("dd/MM/yyyy")</text>
                            }
                        </small>
                    </div>
                </div>

                <div class="proposta-footer">
                    <div class="actions-group">
                        <!-- Grupo Principal -->
                        <div class="d-flex gap-2">
                            <a href="/Proposta/Detalhes/@proposta.Id" class="action-btn btn-primary" title="Visualizar Proposta">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/Proposta/Editar/@proposta.Id" class="action-btn btn-outline-primary" title="Editar Proposta">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/PropostaAnalyticsData/PropostaDetalhada/@proposta.Id" class="action-btn btn-success" title="Ver Estatísticas">
                                <i class="fas fa-chart-bar"></i>
                            </a>
                        </div>

                        <!-- Grupo Secundário -->
                        <div class="d-flex gap-2">
                            @if (proposta.LinkPublicoAtivo)
                            {
                                <button class="action-btn btn-warning" title="Compartilhar" onclick="copiarLink('@proposta.LinkCompartilhamento')">
                                    <i class="fas fa-share"></i>
                                </button>
                            }
                            else
                            {
                                <button class="action-btn btn-outline-secondary" title="Link Inativo" disabled>
                                    <i class="fas fa-share"></i>
                                </button>
                            }
                            
                            <!-- Dropdown Menu -->
                            <div class="dropdown">
                                <button class="action-btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" title="Mais opções">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="/Destino/Gerenciar/@proposta.Id">
                                            <i class="fas fa-map-marked-alt me-2"></i>Gerenciar Destinos
                                        </a>
                                    </li>
                                    <li>
                                        <button class="dropdown-item" onclick="duplicarProposta('@proposta.Id')">
                                            <i class="fas fa-copy me-2"></i>Duplicar Proposta
                                        </button>
                                    </li>
                                    @if (proposta.LinkPublicoAtivo)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="/Proposta/Publico/@proposta.Id" target="_blank">
                                                <i class="fas fa-external-link-alt me-2"></i>Ver Link Público
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <!-- Ações de Status -->
                                    @if (proposta.StatusProposta != StatusProposta.Cancelada)
                                    {
                                        <li>
                                            <form method="post" action="/Proposta/AlterarStatus" style="display:inline;" class="w-100">
                                                <input type="hidden" name="id" value="@proposta.Id" />
                                                <input type="hidden" name="status" value="5" />
                                                <button type="submit" class="dropdown-item text-warning" 
                                                        onclick="return confirm('Deseja cancelar esta proposta?')">
                                                    <i class="fas fa-ban me-2"></i>Cancelar Proposta
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <form method="post" action="/Proposta/AlterarStatus" style="display:inline;" class="w-100">
                                                <input type="hidden" name="id" value="@proposta.Id" />
                                                <input type="hidden" name="status" value="1" />
                                                <button type="submit" class="dropdown-item text-success" 
                                                        onclick="return confirm('Deseja reativar esta proposta?')">
                                                    <i class="fas fa-check me-2"></i>Reativar Proposta
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    
                                    <li>
                                        <form method="post" action="/Proposta/Excluir" style="display:inline;" class="w-100">
                                            <input type="hidden" name="id" value="@proposta.Id" />
                                            <button type="submit" class="dropdown-item text-danger" 
                                                    onclick="return confirm('Tem certeza que deseja excluir esta proposta? Esta ação não pode ser desfeita.')">
                                                <i class="fas fa-trash me-2"></i>Excluir Proposta
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginação (se necessário) -->
    @if (Model.Propostas.Count > 12)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">Anterior</span>
                    </li>
                    <li class="page-item active">
                        <span class="page-link">1</span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Próximo</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
}
else
{
    <!-- Empty State -->
    <div class="empty-state">
        <div class="empty-icon">
            <i class="fas fa-suitcase-rolling"></i>
        </div>
        <h3 class="empty-title">Nenhuma proposta encontrada</h3>
        <p class="empty-description">
            @if (!string.IsNullOrEmpty(Model.TermoBusca) || Model.FiltroStatus.HasValue)
            {
                <text>Nenhuma proposta corresponde aos filtros aplicados. Tente ajustar os critérios de busca.</text>
            }
            else
            {
                <text>Comece criando sua primeira proposta de viagem e organize experiências incríveis para seus clientes.</text>
            }
        </p>
        <div class="mt-3">
            @if (!string.IsNullOrEmpty(Model.TermoBusca) || Model.FiltroStatus.HasValue)
            {
                <a href="/Proposta" class="btn btn-outline-primary me-2">
                    <i class="fas fa-times me-1"></i>Limpar Filtros
                </a>
            }
            <a href="/Proposta/Criar" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>@(Model.TotalPropostas > 0 ? "Nova Proposta" : "Criar Primeira Proposta")
            </a>
        </div>
    </div>
}

@section Styles {
    <style>
        /* === HEADER PRINCIPAL === */
        .main-header {
            background: linear-gradient(135deg, var(--color-fundo) 0%, #f8f9fb 100%);
            border-bottom: 1px solid var(--color-destaque);
            padding: 2rem 0 1.5rem;
            margin: -2rem -15px 0 -15px;
        }

        .header-content {
            padding-left: 1rem;
        }

        .main-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--color-texto);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--color-texto) 0%, var(--color-principal) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .main-subtitle {
            color: var(--color-texto-secundario);
            font-size: 1.125rem;
            margin-bottom: 0;
            font-weight: 400;
        }

        .header-actions {
            text-align: right;
            padding-right: 1rem;
        }

        .btn-create {
            background: var(--gradient-principal);
            border: none;
            padding: 1rem 2rem;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-medium);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .btn-create::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: var(--transition);
        }

        .btn-create:hover::before {
            left: 100%;
        }

        .btn-create:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-strong);
            color: white;
        }

        /* === DASHBOARD DE ESTATÍSTICAS === */
        .dashboard-stats {
            background: var(--color-fundo);
            padding: 2rem 0;
            margin: 0 -15px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .stat-item {
            background: var(--color-fundo);
            border-radius: var(--border-radius-lg);
            padding: 2rem;
            box-shadow: var(--shadow-light);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(46, 46, 46, 0.06);
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .stat-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-principal);
            transition: var(--transition);
        }

        .stat-item:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-strong);
        }

        .stat-item:hover::before {
            height: 6px;
        }

        .stat-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            color: white;
            background: var(--gradient-principal);
            box-shadow: var(--shadow-medium);
            position: relative;
        }

        .stat-content {
            flex: 1;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--color-texto);
            margin-bottom: 0.25rem;
            line-height: 1;
        }

        .stat-label {
            color: var(--color-texto-secundario);
            font-weight: 600;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .stat-change {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #28a745;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .stat-change i {
            font-size: 0.75rem;
        }

        .stat-percentage {
            background: var(--color-destaque);
            color: var(--color-texto-secundario);
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-block;
        }

        .stat-percentage.success {
            background: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }

        /* Cores específicas para cada estatística */
        .stat-total .stat-icon {
            background: linear-gradient(135deg, var(--color-principal), #2E6A8E);
        }

        .stat-rascunhos .stat-icon {
            background: linear-gradient(135deg, #6c757d, #5a6268);
        }

        .stat-enviadas .stat-icon {
            background: linear-gradient(135deg, #ffc107, #e0a800);
        }

        .stat-aprovadas .stat-icon {
            background: linear-gradient(135deg, #28a745, #1e7e34);
        }

        /* === FILTROS MODERNOS === */
        .filters-modern {
            background: var(--color-fundo);
            border-radius: var(--border-radius-lg);
            margin: 2rem -15px;
            box-shadow: var(--shadow-light);
            border: 1px solid var(--color-destaque);
        }

        .filters-header {
            display: flex;
            justify-content: between;
            align-items: center;
            padding: 1.25rem 2rem;
            border-bottom: 1px solid var(--color-destaque);
            background: linear-gradient(135deg, var(--color-destaque) 0%, #f2ede0 50%, var(--color-destaque) 100%);
        }

        .filters-title {
            color: var(--color-texto);
            font-weight: 600;
            margin: 0;
            font-size: 1.125rem;
            flex: 1;
        }

        .filters-content {
            padding: 2rem;
            display: none;
        }

        .filters-content.show {
            display: block;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .filter-group {
            margin-bottom: 0;
        }

        .filter-label {
            color: var(--color-texto);
            font-weight: 600;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
            display: block;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .search-wrapper {
            position: relative;
        }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--color-principal);
            z-index: 2;
        }

        .search-input {
            padding-left: 2.75rem;
            padding-right: 2.5rem;
            border: 2px solid var(--color-destaque);
            border-radius: var(--border-radius);
            transition: var(--transition);
            background: var(--color-fundo);
        }

        .search-input:focus {
            border-color: var(--color-principal);
            box-shadow: 0 0 0 0.2rem rgba(58, 124, 165, 0.25);
            padding-left: 2.75rem;
        }

        .clear-search {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
